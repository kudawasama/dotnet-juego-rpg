root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
indent_style = space
indent_size = 4

# Estilo C# básico
csharp_new_line_before_open_brace = all
csharp_preserve_single_line_blocks = false
csharp_preserve_single_line_statements = false

# Preferencias de tipo
dotnet_style_predefined_type_for_locals_parameters_members = true:suggestion
dotnet_style_predefined_type_for_member_access = true:suggestion

# Calificadores
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion

# Reglas ruidosas desactivadas inicialmente
# (Se pueden endurecer luego)
dotnet_diagnostic.SA1633.severity = none   # cabecera copyright
dotnet_diagnostic.SA1600.severity = none   # doc XML requerida

# This. opcional
dotnet_diagnostic.SA1101.severity = suggestion

# Parámetros no usados (informativo)
dotnet_diagnostic.IDE0060.severity = silent
